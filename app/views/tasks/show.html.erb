<h1>Individual Task</h1>

<h2> <%= @task.title %> </h2>
<p> <strong>Details:</strong> <%= @task.details %> </p>
<p> <strong>Completed:</strong> <%= @task.completed %> </p>

<%= link_to "Edit", edit_path(@task) %>

<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>

<%=  link_to "Back to home", tasks_path%>
